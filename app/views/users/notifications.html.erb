<div class="container mt-5 col-10">
  <h2 class="text-center">お知らせ一覧</h2>
</div>
<div class="container mt-5">
  <div class="card col-10">
    <div class="card-body">
      <div class="row">
        <div class="col-12 mx-auto">
          <ul class="list-group">
            <% if @notifications.count != 0 %>
              <% @notifications.each do |n| %>
                <%= link_to(n.url, class: "list-group-item list-group-item-action", onclick: 'read(#{n})',id: "read")do %>
                  <p class="mb-0"><%= n.message %></p>
                 　<% notification_read(n) %>
                  <% if n.is_read %>
                    <p class="text-right text-muted mb-0">既読</p>
                  <% else %>
                    <p class="text-right text-muted mb-0">未読</p>
                  <% end %>
                  
                <% end %>
                <p class="text-right text-muted"><%= n.updated_at.strftime("%Y-%m-%d %H:%M")%></p>
              <% end %>
              <%= paginate @notifications%>
            <% else %>
              <div class="text-center">お知らせはありません</div>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function read(n){
   notification_read(n) 
}
</script>